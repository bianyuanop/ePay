{
  "canisters": {
    "merchant": {
      "candid": "src/ePay_backend/src/canisters/merchant.did",
        "type": "custom",
        "wasm": "target/wasm32-unknown-unknown/release/merchant_opt.wasm",
        "build": [
          "cargo build --target wasm32-unknown-unknown --bin merchant --release",
          "ic-wasm target/wasm32-unknown-unknown/release/merchant.wasm -o target/wasm32-unknown-unknown/release/merchant_opt.wasm shrink"
        ] 
    },
    "ePay_backend": {
      "candid": "src/ePay_backend/ePay_backend.did",
      "package": "ePay_backend",
      "type": "rust"
    },
    "ePay_frontend": {
      "dependencies": [
        "ePay_backend"
      ],
      "frontend": {
        "entrypoint": "src/ePay_frontend/src/index.html"
      },
      "source": [
        "src/ePay_frontend/assets",
        "dist/ePay_frontend/"
      ],
      "type": "assets"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    }
  },
  "output_env_file": ".env",
  "version": 1
}